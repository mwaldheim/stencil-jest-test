{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "strict": true,
    "lib": [
      "dom",
      "es2019"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2019",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "skipLibCheck": false,
    "resolveJsonModule": true,
    "types": ["node", "jest"]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
